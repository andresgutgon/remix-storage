{
  "name": "@remix-storage/core",
  "version": "0.1.0",
  "description": "File storage solution for Remix with Prisma as ORM. Handle multiple file storage providers like Disk or S3",
  "author": "Andrés Gutiérrez",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.json",
    "build:types:watch": "tsc-watch --emitDeclarationOnly --declaration --project tsconfig",
    "build:common": "esbuild ./src/index.ts --outfile=dist --platform=node --format=cjs",
    "build:watch": "pnpm run build:common -- --sourcemap --watch"
  },
  "devDependencies": {
    "@rushstack/eslint-config": "^2.5.1",
    "@rushstack/heft": "0.44.2",
    "@rushstack/heft-jest-plugin": "^0.2.3",
    "@rushstack/heft-node-rig": "1.8.0",
    "@types/heft-jest": "1.0.2",
    "@types/node": "16.11.7",
    "eslint": "^8.9.0",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  }
}
