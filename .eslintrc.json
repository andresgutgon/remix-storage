{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "no-console": "error",
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
  },
  "env": {
    "node": true,
    "commonjs": true
  },
  "ignorePatterns": ["dist", "node_modules", "bin"]
}
